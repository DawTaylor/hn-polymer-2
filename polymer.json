{
  "entrypoint": "index.html",
  "shell": "src/hn-app.html",
  "fragments": [
    "src/hn-list.html",
    "src/hn-item.html",
    "src/hn-user.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "name": "es5-bundled",
    "bundle": true,
    "js": {"minify": true, "compile": true},
    "css": {"minify": true},
    "html": {"minify": true},
    "addServiceWorker": true,
    "addPushManifest": true
  },{
    "name": "es6-unbundled",
    "js": {"minify": true},
    "css": {"minify": true},
    "html": {"minify": true},
    "addServiceWorker": true,
    "addPushManifest": true,
    "insertPrefetchLinks": true
  }]
}
